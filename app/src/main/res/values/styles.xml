<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editText">
        <item name="android:fontFamily">@font/sigmar</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

        <style name="CircleShape">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50%</item>
        </style>

    <style name="CustomCalendarView" parent="android:Widget.Material.CalendarView">
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayStyle</item>
        <item name="android:dateTextAppearance">@style/CalendarDateStyle</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarHeaderStyle</item>
        <item name="android:headerYearTextAppearance">@style/CalendarHeaderStyle</item>
    </style>


    <style name="CalendarWeekDayStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="CalendarDateStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="CalendarHeaderStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_dark</item>
    </style>



</resources>