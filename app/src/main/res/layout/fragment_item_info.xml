<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/different_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:strokeColor="@color/accent"
        app:strokeWidth="2dp"
        android:padding="16dp">

        <!-- Calendar and Favorite Buttons in the Same Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="8dp"
                android:src="@drawable/baseline_edit_calendar_24" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@null"
                android:src="@drawable/fav" />
        </LinearLayout>

        <!-- Lottie Animation -->
        <FrameLayout
            android:layout_width="match_parent"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieWait"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:strokeColor="@color/accent"
                app:strokeWidth="2dp"
                android:background="@drawable/different_background"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/wait" />
        </FrameLayout>

        <!-- Meal Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/different_background"

                android:padding="12dp">

                <!-- Left Side: Meal Name & Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/meal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_name"
                        style="@style/editText"
                        android:textColor="@color/primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/editText"
                        android:textColor="@color/accent"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/areaNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    style="@style/editText"
                    android:text="@string/country_name"
                    android:textColor="@color/primary_dark"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ingredients Section -->
        <TextView
            android:id="@+id/ingredientsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredients_list"
            style="@style/editText"
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Instructions Label Outside Card -->
        <TextView
            android:id="@+id/mealInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textSize="18sp"
            style="@style/editText"
            android:background="@drawable/different_background"
            android:textColor="@color/primary_dark"
            android:textStyle="bold|italic"
            android:layout_marginTop="16dp" />

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp"
            android:background="@drawable/different_background"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/different_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/instructions_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instructions"
                    android:textSize="16sp"
                    android:background="@drawable/different_background"
                    style="@style/editText"
                    app:strokeColor="@color/accent"
                    app:strokeWidth="2dp"
                    android:textColor="@color/primary_dark"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Watch Video Section -->
        <TextView
            android:id="@+id/watchVideoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watch_video_now"
            android:textSize="20sp"
            style="@style/editText"
            android:textColor="@color/primary_dark"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <WebView
            android:id="@+id/video"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/different_background" />
    </LinearLayout>
</ScrollView>
