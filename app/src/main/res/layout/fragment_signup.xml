<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/different_background"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/primary_light"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="437dp"
            android:padding="16dp">


            <TextView
                android:id="@+id/tvAllFav"
                style="@style/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:drawableStart="@drawable/islamic_lantern"
                android:drawableEnd="@drawable/islamic_lantern"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp"
                android:text="@string/sign_up"
                android:textColor="@color/primary_dark"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextName"
                style="@style/editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary_dark"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/username"
                android:drawablePadding="8dp"
                android:hint="@string/name"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="#19374F"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAllFav" />

            <EditText
                android:id="@+id/editTextEmail"
                style="@style/editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/email"
                android:drawablePadding="8dp"
                android:textColor="@color/primary_dark"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="#19374F"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextPass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextName" />

            <EditText
                android:id="@+id/editTextPass"
                style="@style/editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary_dark"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/password"
                android:drawableEnd="@drawable/eye"
                android:drawablePadding="8dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColorHint="#19374F"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/editTxtConfirmPass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <EditText
                android:id="@+id/editTxtConfirmPass"
                style="@style/editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary_dark"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/password"
                android:drawablePadding="8dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/primary_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btnSignUpFrag"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPass" />

            <Button
                android:id="@+id/btnSignUpFrag"
                style="@style/editText"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary_dark"                android:fontFamily="@font/sigmar"
                android:text="@string/sign_up"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/txthaveAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTxtConfirmPass" />

            <TextView
                android:id="@+id/txthaveAccount"
                style="@style/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="16dp"
                android:text="@string/have_account"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSignUpFrag" />

            <TextView
                android:id="@+id/loginTxt"
                style="@style/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:paddingVertical="2dp"
                android:text="@string/login"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txthaveAccount"
                app:layout_constraintTop_toBottomOf="@+id/btnSignUpFrag" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:scaleType="fitStart"
        android:src="@drawable/vegetables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
